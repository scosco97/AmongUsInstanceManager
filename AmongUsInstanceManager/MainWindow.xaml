<Window x:Class="AmongUsInstanceManager.MainWindow"
        Icon="aum.ico" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AmongUsInstanceManager"
        mc:Ignorable="d"
        Title="Among Us Instance Manager" Height="450" Width="300">
    <Grid Background="DimGray">
        <Button Content="Start Instances" HorizontalAlignment="Left" Margin="98,198,0,0" VerticalAlignment="Top" Width="90" Name="startNumInstancesButton" Click="startNumInstancesButton_Click"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="74,170,0,0" TextWrapping="Wrap" Text="Enter Number" VerticalAlignment="Top" Width="136" Name="numInstanceField"/>
        <Label Content="Uses AmongUs Environment Variable" HorizontalAlignment="Left" Margin="41,139,0,0" VerticalAlignment="Top" Width="207"/>
        <Label Content="" HorizontalAlignment="Left" Margin="41,223,0,0" VerticalAlignment="Top" Name="instanceResult" RenderTransformOrigin="-2.25,0.453" Width="207"/>
        <Button Content="Close All Instances" HorizontalAlignment="Left" Margin="86,254,0,0" VerticalAlignment="Top" Width="110" Click="Button_Click_2"/>
    </Grid>
</Window>
